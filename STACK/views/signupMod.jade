div(id = "signupScreen")
	div(class="page-header")
		h4 SignUp to mySearch
	.container(ng-show="registerBool")
		h2 Horizontal form
		form.form-horizontal(name='inputForm')
			.form-group
				label.control-label.col-sm-2 Email(*):
				.col-sm-10
					input.form-control(type='email', name="email" ,placeholder='Enter email',ng-model="email", required)
					div
						.error(ng-show='inputForm.email.$error.required')
							small.error
							| Your email is required.
			.form-group
				label.control-label.col-sm-2 Username(*):
				.col-sm-10
					input.form-control(type='text',name="username", placeholder='Enter Username',ng-model="username",required)
					div
						.error(ng-show='inputForm.username.$error.required')
							small.error
							| Your username Is required
			.form-group
				label.control-label.col-sm-2 Password(*):
				.col-sm-10
					input.form-control(type='password',name="password", placeholder='Enter Password',ng-model="password",required)
					.error(ng-show='inputForm.password.$error.required')
							small.error
							| Your password is required
			.form-group
				label.control-label.col-sm-2 Repeat Password(*):
				.col-sm-10
					input.form-control(type='password',name="passwordRep", placeholder='Please Repeat Password',ng-model="passwordRep",required)			
					.error(ng-show='inputForm.passwordRep.$error.required')
							small.error
							| You are required to validate password
			.form-group
				label.control-label.col-sm-2 Name:
				.col-sm-10
					input.form-control(type='text', placeholder='Enter Username',ng-model="name")
			.form-group
				label.control-label.col-sm-2 Surname:
				.col-sm-10
					input.form-control(type='text', placeholder='Enter Username',ng-model="surname")
			.form-group
				.col-sm-10		
					button.btn.btn-default.btn-lg(ng-if="!inputForm.email.$error.required && !inputForm.username.$error.required && !inputForm.password.$error.required && !inputForm.passwordRep.$error.required", ng-click='signup()') Signup
