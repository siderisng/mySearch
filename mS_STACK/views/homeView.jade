div(ng-controller="homeCtrl" id="content")
	video.fullscreen-bg__video(loop='', muted='', autoplay='' poster='/images/poster.jpg')
		source(src='/vid/bg4.mp4', type='video/mp4')

	div(class="jumbotron",id="loginScreen")
		navbar-wrapper
			nav.navbar
				.container-fluid
					.navbar-header
						h1(class='palette1') 
							img(src='/img/logo.png')
							font   mySearch
						button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-collapse")
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
					.navbar-collapse.collapse
						#nav-left
							div(id="iphone")
								carousel(interval='2000', disable-animation='true')
									slide(ng-repeat='slide in slides')
										img(ng-src='{{slide.image}}', style='margin:auto;')
							

						
						div.login-right
							form
								label Username/Email
								div.input-group
									span(class="input-group-addon")
										i(class="fa fa-user fa-fw")
									input(class="form-control" type="text" name="username" ng-model="usernameLog")
									
								label Password
								div.input-group
									span(class="input-group-addon")
										i(class="fa fa-key fa-fw")
									input(class="form-control" type="password" name="password" ng-model="passwordLog")
								


								input.btn.btn-default.btn-lg(ng-click='login()' type='submit' value='Login')
							br
							a(onclick="javascript:showDiv();" id="open" href="#") Not a member yet? RLY?
							br
							a(href='documentation' class='palette2' target='_top') U Developer?
							br
							br
							br
							img(src="/img/apps.png" style="width:150px;")
							
					div#footer(class="homepageFooter" style="margin-top:-20px")
						br
						br
						p mySearch &copy; 2015 | Created by MontyBits. All Rights Reserved. 
							br
							font(style='font-size:13px;') Pin logo designed by 
								a(href='https://www.iconfinder.com/nitishkmrk' target='_blank') nitishkmrk 
							font(style='font-size:13px;') under CC license
			
			
			div(id="signup")			
				div(id="signupModal")
						div(id = "signupScreen")
							div(class="page-header")
								h4 SignUp to mySearch
							.container
								form.form-horizontal(name='inputForm')
									.form-group
										label.control-label.col-sm-2 Email(*):
										.col-sm-10
											input.form-control(type='email', name="email" ,placeholder='Enter email',ng-model="email", required)
											div
												.error(ng-show='inputForm.email.$error.required')
													small.error
													| Your email is required.
									.form-group
										label.control-label.col-sm-2 Username(*):
										.col-sm-10
											input.form-control(type='text',name="username", placeholder='Enter Username',ng-model="username",required)
											div
												.error(ng-show='inputForm.username.$error.required')
													small.error
													| Your username Is required
									.form-group
										label.control-label.col-sm-2 Password(*):
										.col-sm-10
											input.form-control(type='password',name="password", placeholder='Enter Password(at least 6 characters)',ng-model="password",required)
											.error(ng-show='inputForm.password.$error.required')
													small.error
													| Your password is required
									.form-group
										label.control-label.col-sm-2 Repeat Password(*):
										.col-sm-10
											input.form-control(type='password',name="passwordRep", placeholder='Please Repeat Password',ng-model="passwordRep",required)			
											.error(ng-show='inputForm.passwordRep.$error.required')
													small.error
													| You are required to validate password
									.form-group
										label.control-label.col-sm-2 Name:
										.col-sm-10
											input.form-control(type='text', placeholder='Enter Username',ng-model="name")
									.form-group
										label.control-label.col-sm-2 Surname:
										.col-sm-10
											input.form-control(type='text', placeholder='Enter Username',ng-model="surname")
									.form-group
										.col-sm-10		
											button.btn.btn-default.btn-lg(ng-if="!inputForm.email.$error.required && !inputForm.username.$error.required && !inputForm.password.$error.required && !inputForm.passwordRep.$error.required", ng-click='signup()') Signup
								
								a(onclick="javascript:hideDiv();" href="#" id="close") CLOSE X

	div(id="git-corner")

	div(id="git-corner-img")
